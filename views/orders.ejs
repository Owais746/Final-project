<%- include('./partials/header') %>

<!-- Flash Messages -->
<% if (success && success.length > 0) { %>
    <div class="w-full bg-green-500 text-white text-center py-2">
        <%= success %>
    </div>
<% } %>
<% if (error && error.length > 0) { %>
    <div class="w-full bg-red-500 text-white text-center py-2">
        <%= error %>
    </div>
<% } %>

<div class="w-full min-h-screen px-20 py-20">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8">Your Orders</h2>
        
        <% if (orders && orders.length > 0) { %>
            <div class="space-y-6">
                <% orders.forEach(function(order, index) { %>
                    <div class="border rounded-lg p-6 bg-white shadow-sm">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="text-xl font-semibold">Order #<%= index + 1 %></h3>
                                <p class="text-gray-600">Placed on <%= new Date(order.orderDate).toLocaleDateString() %></p>
                            </div>
                            <div class="text-right">
                                <span class="inline-block px-3 py-1 rounded-full text-sm font-medium 
                                    <%= order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                                        order.status === 'delivered' ? 'bg-green-100 text-green-800' : 
                                        'bg-blue-100 text-blue-800' %>">
                                    <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                </span>
                                <p class="text-lg font-bold text-green-600 mt-1">₹<%= order.total %></p>
                            </div>
                        </div>
                        
                        <!-- Order Items -->
                        <div class="border-t pt-4">
                            <h4 class="font-medium mb-3">Items (<%= order.items.length %>)</h4>
                            <div class="space-y-3">
                                <% order.items.forEach(function(item) { %>
                                    <div class="flex items-center justify-between py-2">
                                        <div class="flex-1">
                                            <p class="font-medium"><%= item.name %></p>
                                            <p class="text-sm text-gray-600">
                                                Quantity: <%= item.quantity %> × ₹<%= item.price %>
                                                <% if (item.discount > 0) { %>
                                                    <span class="text-green-600">(<%= item.discount %>% off)</span>
                                                <% } %>
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <% let itemTotal = item.price * item.quantity %>
                                            <% if (item.discount > 0) { 
                                                itemTotal -= (itemTotal * item.discount) / 100; 
                                            } %>
                                            <span class="font-medium">₹<%= Math.round(itemTotal) %></span>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                        
                        <!-- Delivery Address -->
                        <div class="border-t pt-4 mt-4">
                            <h4 class="font-medium mb-2">Delivery Address</h4>
                            <p class="text-gray-700"><%= order.address %></p>
                            <p class="text-gray-700">Phone: <%= order.phone %></p>
                        </div>
                        
                        <!-- Order Actions -->
                        <div class="border-t pt-4 mt-4">
                            <div class="flex gap-3">
                                <% if (order.status === 'pending') { %>
                                    <button class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors"
                                            onclick="cancelOrder(<%= index %>)">
                                        Cancel Order
                                    </button>
                                <% } %>
                                <button class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
                                        onclick="trackOrder(<%= index %>)">
                                    Track Order
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- No Orders -->
            <div class="text-center py-20">
                <div class="max-w-md mx-auto">
                    <i class="ri-shopping-bag-line text-6xl text-gray-400 mb-4"></i>
                    <h3 class="text-2xl font-bold text-gray-600 mb-2">No Orders Yet</h3>
                    <p class="text-gray-500 mb-6">You haven't placed any orders yet. Start shopping to see your orders here.</p>
                    <a href="/shop" 
                       class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                        Start Shopping
                    </a>
                </div>
            </div>
        <% } %>
        
        <!-- Back to Shop -->
        <div class="mt-8 text-center">
            <a href="/shop" 
               class="inline-block bg-gray-200 text-gray-800 px-6 py-3 rounded-lg font-semibold hover:bg-gray-300 transition-colors">
                Continue Shopping
            </a>
        </div>
    </div>
</div>

<script>
function cancelOrder(orderIndex) {
    if (confirm('Are you sure you want to cancel this order?')) {
        // In a real application, you would send a request to cancel the order
        alert('Order cancellation requested. You will receive a confirmation shortly.');
    }
}

function trackOrder(orderIndex) {
    // In a real application, this would show detailed tracking information
    alert('Order tracking: Your order is being processed and will be shipped soon.');
}
</script>

<%- include('./partials/footer') %>
